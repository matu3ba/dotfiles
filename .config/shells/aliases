## shell-independent aliases ##
# helpers
alias sortby_filesize='echo "find FILE -type f -exec wc -l {} + | sort -rn"'
alias count_occurenceschar='echo "grep -o \"{\" FILE | wc -l"'
alias replunderscore='for f in *\ *; do mv "$f" "${f// /_}"; done'
