# EditorConfig: https://EditorConfig.org
# git stores version tracked information as utf-8 and with lf
# tools, languages and compilers may or may not be able to convert or use other
# formats.
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true

[*.{c,cpp,h,zig}]
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

